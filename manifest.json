{
  "name": "WinaLive",
  "version": "2.0",
  "description": "Notify Live & Freeroll and let you participate to Winamax Quiz in Chat",
  "permissions": ["storage", "notifications"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "resources/images/WinaLive16x16.png",
      "32": "resources/images/WinaLive32x32.png",
      "48": "resources/images/WinaLive48x48.png",
      "128": "resources/images/WinaLive128x128.png"
    }
  },
  "icons": {
    "16": "resources/images/WinaLive16x16.png",
    "32": "resources/images/WinaLive32x32.png",
    "48": "resources/images/WinaLive48x48.png",
    "128": "resources/images/WinaLive128x128.png"
  },
  "author": "Vincent Larreur",
  "manifest_version": 2
}